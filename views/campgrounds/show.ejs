<%- include("../partials/header") %>

<div class = "container">
	<div class = "row">
		<div class = "col-md-3">
			<p class="lead">Lead class</p>
			<div class = "list-group">
				<li class = "list-group-item active">Item 1</li>
				<li class = "list-group-item">Item 2</li>
				<li class = "list-group-item">Item 3</li>
			</div>

		</div>
		<div class = "col-md-9">
			<div class = "thumbnail">
				<img class="img-responsive" src = "<%=campgrounds.image%>">
				<div class = "caption-full">
					<h4 class = "pull-right"><%=campgrounds.price%> Rs</h4>
					<h4><a href = "#"><%=campgrounds.name%></a></h4>
					<p><%=campgrounds.description%></p>
					<p><em>Submitted By <%=campgrounds.author.username%></em></p>
					<%if((currentUser) && (campgrounds.author.id.equals(currentUser._id))){%>
						<a href = "/campgrounds/<%=campgrounds._id%>/edit" type="button" class="btn btn-default btn-sm">Edit</a>
						<form class = "delete-form" action = "/campgrounds/<%=campgrounds._id%>?_method=DELETE" method = "POST">
							<button class="btn btn-danger btn-sm">Delete</button>
						</form>
					<%}%>
					
				</div>
				
			</div>
			<div class = "well">
				<div class = "text-right"><a  class="btn btn-success" href = "/campgrounds/<%=campgrounds._id%>/comments/new">Add new comment</a></div>
				<hr>
				<div class = "row">
					<div class = "col-md-12">
						<%campgrounds.comments.forEach(function(comment){%>
							<strong><%=comment.author.username%></strong>
							<span class = "pull-right">10 days ago</span>
							<p><%=comment.text%></p>
							<%if((currentUser) && (comment.author.id.equals(currentUser._id))){%>
							<a class = "btn btn-xs btn-warning" href = "/campgrounds/<%=campgrounds._id%>/comments/<%=comment._id%>/edit">Edit</a>
							<form class = "delete-form" action = "/campgrounds/<%=campgrounds._id%>/comments/<%=comment._id%>?_method=DELETE" method = "POST">
								<button class="btn btn-danger btn-xs">Delete</button>
							</form>
						<%}%>
						<hr>
						<%})%>
					</div>
				</div>
			</div>
	
	
		
		</div>
	</div>
	
</div>


<%- include("../partials/footer") %>


