<%- include("../partials/header") %>

<div class = "container">
	<h1 style = "text-align: center">Add a new camp</h1>
	<div class = "row">
		<div style = "width: 30%; margin: 40px auto" >
			<form action = "/campgrounds" method = "POST">
				<div class = "form-group">
					<input class = "form-control" type = "text" placeholder = "Name" name = "name">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "number" placeholder = "Price" name = "price" min = "1" step = "1">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" placeholder = "Image" name = "image">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" placeholder = "Description" name = "description">
				</div>
				<div class = "form-group">
					<input class = "btn btn-default btn-grad btn-lg btn-block" type = "submit">
				</div>
			</form>
			<a class = "btn-grad btn btn-default btn-sm" href = "/campgrounds">Go Back</a>
		</div>
		
	</div>
</div>
<%- include("../partials/footer") %>
