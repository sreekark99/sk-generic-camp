<%- include("../partials/header") %>

<div class = "container">
	<h1 style = "text-align: center">Edit <%=campground.name%></h1>
	<div class = "row">
		<div style = "width: 30%; margin: 40px auto" >
			<form action = "/campgrounds/<%=campground._id%>?_method=PUT" method = "POST">
				<div class = "form-group">
					<input class = "form-control" type = "text" value = "<%=campground.name%>" name = "name">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "number" vakue = "<%campground.price%>" name = "price" min = "0.01" step = "0.01">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" value = "<%=campground.image%>" name = "image">
				</div>
				<div class = "form-group">
					<input class = "form-control" type = "text" value = "<%=campground.description%>" name = "description">
				</div>
				<div class = "form-group">
					<input class = "btn btn-default btn-lg btn-block" type = "submit">
				</div>
			</form>
			<a href = "/campgrounds/<%=campground._id%>">Go Back</a>
		</div>
		
	</div>
</div>
<%- include("../partials/footer") %>
